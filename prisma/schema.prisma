generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id                  String  @id
  nickname            String
  spotifyAccessToken  String?
  spotifyRefreshToken String?
}

model Auth0ManagementApiToken {
  id        String   @id
  token     String
  expiresAt DateTime
}

model songNotes {
  id          Int      @id @default(autoincrement())
  userID      String
  commName    String
  playlistID  String
  songID      String
  note        String      
}

model comments {
  id          Int     @id @default(autoincrement())
  userID      String
  playlistID  String
  comment     String
  time        DateTime
}
